---
import "../styles/global.css";

// poți seta titlul din pagină: <Base title="Contact">...</Base>
const { title = "RoCa Swimming Club" } = Astro.props;
const year = new Date().getFullYear();
---
<html lang="ro">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="min-h-dvh bg-gradient-to-b from-white to-[#F3E9D8] text-slate-900 antialiased selection:bg-amber-200/40">
    <!-- HEADER reutilizabil -->
    <header class="sticky top-0 z-50
                   bg-white/70 supports-[backdrop-filter]:bg-white/30
                   backdrop-blur-md border-b border-white/40 shadow-sm">
      <nav class="max-w-6xl mx-auto px-4 h-14 flex items-center justify-between text-slate-900">
        <a href="/" class="flex items-center gap-3">
          <img src="/logo-roca.jpeg" alt="RoCa Swimming Club" class="h-8 w-auto md:h-10" />
          <span class="text-slate-900 font-semibold tracking-tight text-lg">
            RoCa <span class="font-semibold">Swimming Club</span>
          </span>
        </a>
        <div class="flex gap-4 md:gap-5 text-[15px]">
          <a href="/"          class="hover:text-[#0F4C73] hover:underline underline-offset-4">Acasă</a>
          <a href="/cursuri"   class="hover:text-[#0F4C73] hover:underline underline-offset-4">Cursuri</a>
          <a href="/despre_noi"class="hover:text-[#0F4C73] hover:underline underline-offset-4">Despre Noi</a>
          <a href="/contact"   class="hover:text-[#0F4C73] hover:underline underline-offset-4">Contact</a>
        </div>
      </nav>
    </header>

    <!-- Buton WhatsApp flotant -->
    <a href="https://wa.me/40741500611?text=Bună!%20Aș%20vrea%20informații%20despre%20cursurile%20RoCa."
       class="fixed bottom-4 right-4 z-50 rounded-full px-4 py-3 shadow-lg
              bg-[#25D366] text-white font-medium hover:brightness-110
              focus:outline-none focus:ring-2 focus:ring-[#25D366]/50"
       aria-label="Scrie pe WhatsApp" rel="noopener noreferrer">
      WhatsApp
    </a>

    <!-- conținutul paginii -->
    <slot />

    <!-- FOOTER subtil global -->
    <footer class="mt-16 border-t border-slate-200/60
                   bg-white/50 supports-[backdrop-filter]:bg-white/30 backdrop-blur
                   py-6">
      <div class="max-w-6xl mx-auto px-4
                  flex flex-col sm:flex-row items-center justify-between gap-4
                  text-sm text-slate-600">
        <!-- Social + telefon -->
        <div class="flex items-center gap-5">
          <!-- Instagram -->
          <a href="https://instagram.com/roca_swimming" target="_blank" rel="noopener noreferrer"
             aria-label="Instagram" class="hover:text-[#0F4C73]">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="5"></rect>
              <circle cx="12" cy="12" r="4"></circle>
              <circle cx="17.5" cy="6.5" r="1.3" fill="currentColor" stroke="none"></circle>
            </svg>
          </a>

          <!-- Facebook -->
          <a href="https://facebook.com/roca.swimming" target="_blank" rel="noopener noreferrer"
             aria-label="Facebook" class="hover:text-[#0F4C73]">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22 12a10 10 0 1 0-11.5 9.87v-6.99H8v-2.88h2.5V9.41c0-2.46 1.47-3.82 3.72-3.82 1.08 0 2.21.19 2.21.19v2.43h-1.25c-1.23 0-1.61.76-1.61 1.54v1.86H16.4l-.4 2.88h-2.23v6.99A10 10 0 0 0 22 12z"></path>
            </svg>
          </a>

          <!-- Telefon (apel direct) -->
          <a href="tel:+40741500611" class="inline-flex items-center gap-2 hover:text-[#0F4C73]"
             aria-label="Sună-ne">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.9 19.9 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6A19.9 19.9 0 0 1 2.08 4.18 2 2 0 0 1 4.06 2h3a2 2 0 0 1 2 1.72c.12.9.33 1.77.62 2.6a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.48-1.14a2 2 0 0 1 2.11-.45c.83.29 1.7.5 2.6.62A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </a>
        </div>

        <!-- Copyright -->
        <div class="text-xs sm:text-sm text-slate-500">
          © {year} RoCa Swimming Club. Toate drepturile rezervate.
        </div>
      </div>
    </footer>
  </body>
</html>
